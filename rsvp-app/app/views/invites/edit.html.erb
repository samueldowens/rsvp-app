<h1>Editing invite</h1>

<%= form_for(@invite) do |f| %>
 <p> Event <%= f.select(:event_id, options_for_select(@events)) %></p>
 <p> User <%= f.select(:user_id, options_for_select(@users)) %></p>
 <p> Attending? <%= f.select(:rsvped, [["True", "true"], ["False", "false"]]) %> </p>
<%= f.submit %>
<% end %>

<%= link_to 'Back', invites_path %>
